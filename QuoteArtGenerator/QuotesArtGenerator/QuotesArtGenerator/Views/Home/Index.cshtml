@model QuotesArtGenerator.Models.Quote
@using QuotesArtGenerator;

@{
    ViewData["Title"] = "QuoteGen";
}

@*
    <h1>Category: @Html.DisplayFor(model => model.CATEGORY)</h1>*@

    <hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="co-sm-12 col-md-8">
                <img src="@PixabayAPI.GetPixabayUrl(Model.CATEGORY).Result" class="rounded" alt="pixabayImg" style="position: relative; width: 100%;">
                <h3 class="quote text-white">
                    "@Html.DisplayFor(model => model.QUOTE)"
                </h3>
            </div>
            <div class="col-md-2"></div>
        </div>
        <hr />
        <h5>
            <br />
            Author:
            <a href="/Home/GetWikiUrl?author=@Html.DisplayFor(model => model.AUTHOR)">
                @Html.DisplayFor(model => model.AUTHOR)
            </a>
            <a class="btn btn-outline-primary float-right" asp-controller="Home" asp-action="Index" role="button">Generate next</a>
            <br />
            Category:
            <a href="/Home/List?category=@Html.DisplayFor(model => model.CATEGORY)">
                @Html.DisplayFor(model => model.CATEGORY)
            </a>
        </h5>
        
    </div>

    @*<img src="@PixabayAPI.GetPixabayUrl(Model.CATEGORY).Result" class="rounded" alt="pixabayImg">*@

